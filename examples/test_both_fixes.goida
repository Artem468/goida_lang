// Тест 1: Поля без инициализации
класс Конфиг {
    публичный название: текст;
    публичный порт: число;
    публичный включен: логический;
}

// Тест 2: Присвоение свойств объектов
класс Точка {
    публичный х: число;
    публичный у: число;
    
    конструктор создать(х_параметр: число, у_параметр: число) {
        это.х = х_параметр;
        это.у = у_параметр;
    }
}

// Тестирование
п1 = новый Точка(10, 20);
печать(п1.х);
печать(п1.у);

// Изменение свойств через присвоение
п1.х = 100;
п1.у = 200;
печать("Новые координаты:");
печать(п1.х);
печать(п1.у);

печать("Тест успешно завершен!");
