// Условия и циклы
пусть н = 7;

если (н > 5) {
    печать("Число больше 5");
} иначе {
    печать("Число меньше или равно 5");
}

// Цикл while
пусть счетчик = 0;
печать("Цикл while:");
пока (счетчик < 3) {
    печать("Счетчик: " + счетчик);
    счетчик = счетчик + 1;
}

// Цикл for
печать("Цикл for:");
пусть i = 0;
для (i = 1; 5) {
    печать("i = " + i);
}

// Проверка четности
если (н % 2 == 0) {
    печать("Число четное");
} иначе {
    печать("Число нечетное");
}
